<div class="row">
  <div class="col-xs-12">
    <%= form_for(@subtask, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, class:"form-control", placeholder: "Enter name" %>
          <small class="text-muted">This field is required.</small>
        </div>
      </div>
      
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :category %>
        </div>
        <div class="col-sm-8">
          <%= f.select(:category, ['Audit and Assurance', 'Bookeeping', 'Consulting', 'Taxation', 'Other'], {}, { :class => 'select-box' }) %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :deadline %>
        </div>
        <div class="col-sm-8">
          <%= f.date_select(:deadline, :order => [:month, :day, :year]) %>
          <br/>
          <small class="text-muted">This field is required.</small>
        </div>
      </div>
      
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :team_task %>
        </div>
        <div class="col-sm-8">
          <%= f.collection_select :task_id, @team.tasks, :id, :name, {}, { :class => 'select-box' } %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :staff %>
        </div>
        <div class="col-sm-8">
          <%= f.collection_select :staff_id, @team.staffs, :id, :name, {}, { :class => 'select-box' } %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :comments %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :comments, class:"form-control", placeholder: "Enter comments", size: "30x12" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit(@subtask.new_record? ?  "Add Subtask" : "Save Changes", class: "btn btn-default btn-large") %>
        </div>
      </div>
    <% end %>
    
    <div class="col-sm-offset-2 col-sm-10 ">
      <%= link_to "Back", request.referer.present? ? request.referer : root_path, class:"btn btn-default btn-large model-form-back-button" %>
    </div>
  </div>
</div>
