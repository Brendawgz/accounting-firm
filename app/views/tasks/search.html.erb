<div class="model-div">
  <div class="model-div-title">
    <h1>Search Results</h1>
    <%= button_to "Back to All Tasks", tasks_path, method: :get, class:"btn btn-default btn-large model-actions-add" %>
  </div>
  <% if @tasks.count > 0 %>
    <%= render 'tasks/list' %>
  <% else %>
      <div class="row model-div-content">
        <h2 style="text-align:center;">No tasks were found. Please try searching again.</h2>
      </div>
  <% end %>
</div>